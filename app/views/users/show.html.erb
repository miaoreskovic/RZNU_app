<% provide(:title, @user.name) %>
<% provide(:button_text, 'Delete') %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
		<li id="del-button">
			<% if !current_user?(@user) %>
				<%= button_to "delete", @user, method: :delete,
					data: { confirm: "You sure?" } %>
			<% end %>
		</li>
    </section>
  </aside>
</div>